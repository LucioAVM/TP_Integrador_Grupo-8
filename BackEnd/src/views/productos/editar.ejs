<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <main class="contenedor">
      <h1 class="titulo">Editar Producto</h1>
      <form action="/dashboard/productos/<%= producto.id_producto %>/editar" method="POST" enctype="multipart/form-data">
        <label>Nombre:</label>
        <input type="text" name="nombre" value="<%= producto.nombre %>" required>
        <label>Descripción:</label>
        <textarea name="descripcion" required><%= producto.descripcion %></textarea>
        <label>Precio:</label>
        <input type="number" name="precio" step="0.01" value="<%= producto.precio %>" required>
        <label>Stock:</label>
        <input type="number" name="stock" value="<%= producto.stock %>" required>
        <label>Imagen actual:</label>
        <img src="<%= producto.imagen %>" alt="Imagen actual" class="imagen-producto">
        <label>Cambiar imagen:</label>
        <input type="file" name="imagen">
        <label>Categoría:</label>
        <input type="number" name="id_categoria" value="<%= producto.id_categoria %>" required>
        <button type="submit" class="boton boton-primario">Guardar cambios</button>
      </form>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>