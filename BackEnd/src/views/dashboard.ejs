<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard Administrador</title>
  </head>
  <body>
    <h1>Bienvenido, <%= admin.nombre %></h1>
    <a href="/logout">Cerrar sesión</a>
    <h2>Listado de productos</h2>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Categoría</th>
        <th>Tipo</th>
        <th>Activo</th>
        <th>Acciones</th>
      </tr>
      <% productos.forEach(producto => { %>
      <tr>
        <td><%= producto.id %></td>
        <td><%= producto.nombre %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.categoria %></td>
        <td><%= producto.tipo %></td>
        <td><%= producto.activo ? 'Sí' : 'No' %></td>
        <td>
          <a href="/dashboard/productos/<%= producto.id %>/editar">Editar</a>
          <% if (producto.activo) { %>
          <form
            action="/dashboard/productos/<%= producto.id %>/desactivar"
            method="POST"
            style="display: inline"
          >
            <button type="submit">Desactivar</button>
          </form>
          <% } else { %>
          <form
            action="/dashboard/productos/<%= producto.id %>/reactivar"
            method="POST"
            style="display: inline"
          >
            <button type="submit">Reactivar</button>
          </form>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/dashboard/productos/agregar">Agregar nuevo producto</a>
  </body>
</html>
